{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": [
      {
        "name": "@nestia/core/lib/transform",
        "validate": true,
        "minify": true
      }
    ],
    "assets": [
      {
        "include": "../swagger.json",
        "outDir": "./dist/swagger.json",
        "watchAssets": true
      }
    ]
  }
}
